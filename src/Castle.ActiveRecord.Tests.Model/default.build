<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.ActiveRecord.Tests.Model"
	default="test"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="common.scripts.dir" value="../../buildscripts/" />
	<include buildfile="${common.scripts.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="build.warnmissingdocs" value="false" />
		<property name="assembly.version" value="2.0.1000.0" />
		<property name="assembly.description" value="An implementation of the ActiveRecord pattern for .NET" />		
		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="NHibernate.dll" />
			<include name="Castle.ActiveRecord.dll"  />
			<include name="log4net.dll" />
			<include name="Iesi.Collections.dll" />
			<include name="Castle.Core.dll" />
			<include name="Castle.DynamicProxy2.dll" />
			<include name="Castle.Components.Validator.dll" />
			<include name="System.Data.dll" />
			<include name="System.Web.dll" />
			<include name="System.Configuration.dll" />
		</assemblyfileset>
	</target>

	<target name="test" depends="init common.compile-tests common.run-tests" description="Runs the tests" />

</project>